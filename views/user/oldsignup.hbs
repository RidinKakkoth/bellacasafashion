    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head> }}
<body>
  <section
    class="vh-100"
    style="background: rgb(238,174,202);
background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(255, 244, 225) 100%);"
  >
    <div class="container py-2 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img
                  src="https://i0.wp.com/www.theunstitchd.com/wp-content/uploads/2018/05/David-Beckhams-style.jpg?fit=657%2C1256"
                  alt="login form"
                  class="img-fluid"
                  style="border-radius: 1rem 0 0 1rem; height: 92vh;"
                />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body text-black">

                  <form action="/signup" method="post">

                    <div class="d-flex align-items-center">

                      <span class="h1 fw-bold mb-0"><img
                          src="https://assets.upstox.com/content/dam/aem-content-integration/assets/images/logos/BELLACASA/square_BELLACASA_com.png "
                          alt="ddddd"
                          style="width: 12vw;"
                        /></span>
                    </div>

                    <h5
                      class="fw-normal mb-1 pb-3 fw-bold"
                      style="letter-spacing: 1px;"
                    >Register account</h5>

                    <div class="form-outline mb-1">
                       
                      <label
                        class="form-label"
                        for="form2Example17"
                      >Name</label>
                      <span
                        style="color: red; font-weight: bold; position: absolute; margin-top: 45px; margin-left: 300px; "  
                        id="name-error"
                      ></span>
                      <input
                        type="text"
                        name="name"
                        id="name"
                        onkeyup="validateName()"
                        class="form-control form-control-lg"
                        
                      />
                    
                       
                    </div>

                      <label class="form-label" for="form2Example17">Email
                        address</label>
                      <span
                        style="color: red; font-weight: bold; position: absolute; margin-top: 45px; margin-left: 240px;"
                        id="email-error"
                      ></span>
                    <div class="form-outline mb-2">
                      <input
                        type="email"
                        name="email"
                        id="email"
                        onkeyup="validateEmail()"
                        class="form-control form-control-lg"
                      />
                    </div>

                    <div class="form-outline mb-1">
                      <label class="form-label" for="form2Example17">Phone
                        Number</label>
                    </div>
                      <span
                        style="color: red; font-weight: bold; position: absolute; margin-top: 15px; margin-left: 339px; "
                        id="phone-error"
                      ></span>
                      <input
                        type="number"
                        name="phone"
                        id="number"
                        onkeyup="validatePhone()"
                        class="form-control form-control-lg"
                      />


                    <div class="form-outline mb-1">
                      <label
                        class="form-label"
                        for="form2Example27"
                      >Password</label>
                      <span
                        style="color: red; font-weight: bold; position: absolute; margin-top: 45px; margin-left: 265px;"
                        id="password-error"
                      ></span>
                      <input
                        type="password"
                        name="password"
                        id="password"
                        onkeyup="validatePassword()"
                        class="form-control form-control-lg"
                      />

                    </div>

                    <div class="pt-1 mb-1 d-flex" >
                      {{! <button class="btn btn-dark btn-lg btn-block" type="submit">Sign Up</button> }}
                      <button
                        type="submit"
                        onclick="return validateForm()"
                        class="btn btn-primary btn-block mb-4"
                      >
                        Sign up
                      </button>
                      <p class=" pb-lg-2 ms-3 mt-2" style="color: #393f81;">Already have an account? <a href="/signin"
                      style="color: #393f81;">Signin here</a></p>
                    </div>
                    
                    <p class="text-center fw-bold text-success">{{#if message}}
                        {{message}}
                      {{/if}}
                    </p>
                    <p class="text-center fw-bold text-danger">{{#if
                        failmessage
                      }}
                        {{failmessage}}
                      {{/if}}</p>
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>