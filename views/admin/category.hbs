<div>
  <div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title">Category List</h3>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Category Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Status</th>

    </tr>
  </thead>
  <tbody class="text_center">
    {{#each categoryList}}
    <tr >
      <td >{{name}}</td>
         <td><a href="/editcategory/{{_id}}"><i class="fa-solid fa-pen-to-square fa-lg" style="color: #135090;"></i></a></td>
                        <td>
               {{#if isListed}}
                         <a
                         class="btn btn-success btn-sm" id="block"
                         href="/unlistcategory/{{_id}}"
                         onclick="return  confirm('are you want to unlist product {{name}}?')"
                         >Listed</a>
               {{else}}  <a
                          class="btn btn-danger btn-sm" id="block"
                          href="/listcategory/{{_id}}"
                          onclick="return  confirm('are you want to list product {{name}}?')"
                         >Unlisted</a>
                       
               {{/if}}
                         </td>
    </tr>
  {{/each}}
  </tbody>
</table>
