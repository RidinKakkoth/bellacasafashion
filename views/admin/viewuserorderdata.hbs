            <div class="d-flex justify-content-between">
                 <div>
                  <span
                          class="d-block font-weight-bold mt-2 ms-3 text-primary"
                        >Invoice</span>
               
                                       <table class="table table-borderless">

                  <tbody class="totals">

                    <tr>
                      <td>
                        <div class="text-left">

                          <span class="text-muted">Subtotal</span>

                        </div>
                      </td>
                      <td>
                        <div class="text-right">
                          <span>{{orderHistoryData.totalAmount}}</span>
                        </div>
