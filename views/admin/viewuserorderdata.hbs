                          {{orderHistoryData.address.0.phone}},<br />
                          {{orderHistoryData.address.0.house}},<br />
                          {{orderHistoryData.address.0.city}},<br />
                          {{orderHistoryData.address.0.state}},<br />
                          {{orderHistoryData.address.0.pincode}},<br />
