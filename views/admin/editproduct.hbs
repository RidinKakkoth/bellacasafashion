
 <main id="main" class="main">

   
    <section class="vh-100">
       
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card shadow-2-strong" style="border-radius: 1rem;">

                  
                <div class="card-body p-5 ">
                    
                    <form  action="/updateproduct/{{dataProduct._id}}" method="post">
      
                  <h3 class="mb-4">Edit Products</h3>
      
                  
                  <div class="form-outline mb-1">
                   
                        <select class="form-select  mb-3"  name="categoryname" style="width:275px; height: 52px;" aria-label="Default select example">

                            <option  value="{{dataProductCategory_id}}" >{{dataProduct.category.name}}</option> <!--must choose category-->
                             {{#each categoryList}}
                            <option value="{{_id}}">{{name}}</option>
                             {{/each}}
                          </select>
                   
                  </div>
                  
                  <div class="form-outline mb-1">
                    <label class="form-label" for="form2Example17">New Product Name</label>
                    <input type="text" name="productname" value="{{dataProduct.name}}" id="form2Example17" style="width:275px;" class="form-control form-control-lg" />
                  </div>

                  <div class="form-outline mb-1">
                    <label class="form-label" for="form2Example17">Description</label>
                    <textarea class="form-control" style="width: 275px;" name="description" aria-label="With textarea">{{dataProduct.description}}</textarea>
                  </div>
                  <div class="form-outline mb-1">
                      <label class="form-label" for="form2Example17">Price</label>
                    <input type="number" id="form2Example17" value="{{dataProduct.price}}" name="price" style="width:275px;" class="form-control form-control-lg" />
                  </div>

                  <div class="form-outline mb-1">
                      <label class="form-label" for="form2Example27">Quantity</label>
                    <input type="number" name="quantity" value="{{dataProduct.stock}}" id="form2Example27" style="width:275px;" class="form-control form-control-lg" />
                  </div>
                
